<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- expanded_item_layout.xml -->
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/expandedLayout">

        <!-- Agency -->
        <TextView
            android:id="@+id/expanded_txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agency Details"
            android:textSize="16sp"
            android:layout_marginBottom="15dp"
            android:textStyle="bold"
            android:fontFamily="@font/area_stencil" />

        <!-- Contact Email -->
        <TextView
            android:id="@+id/expanded_txtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email: example@email.com"
            android:textSize="16sp"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/area_stencil" />

        <!-- Location -->
        <TextView
            android:id="@+id/expanded_txtLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location: Agency Location"
            android:textSize="16sp"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/area_stencil" />

        <!-- Expertise Area -->
        <TextView
            android:id="@+id/expanded_txtExpertise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Expertise Area: Expertise Area"
            android:layout_marginBottom="15dp"
            android:textSize="16sp"
            android:fontFamily="@font/area_stencil" />

        <!-- Registration Date -->
        <TextView
            android:id="@+id/expanded_txtRegistrationDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registration Date: 2022-01-15"
            android:layout_marginBottom="15dp"
            android:textSize="16sp"
            android:fontFamily="@font/area_stencil" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>