<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00AC9393"
    android:id="@+id/Check">


    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="110dp">


        <RelativeLayout
            android:layout_marginRight="20dp"
            android:layout_marginLeft="50dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bg_dish"
                android:alpha="0.3"
                app:tint="#77000000"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="3dp"
                android:src="@drawable/bg_dish"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/imgRes"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:src="@drawable/img"
            android:padding="15dp"/>
        <RelativeLayout
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="50dp"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bg_right"
                android:alpha="0.3"
                app:tint="#77000000"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bg_right"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/right"
                app:tint="#F75F71"
                android:padding="15dp"/>

        </RelativeLayout>

            <LinearLayout
                android:layout_marginLeft="120dp"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical">

            <TextView
                android:id="@+id/txtName"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:text="Rescue Swift"
                android:textAllCaps="true"
                android:gravity="bottom"
                android:textColor="#000"
                android:fontFamily="@font/area_stencil"
                android:textSize="22dp"
                android:paddingBottom="1dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/txtCon"
                android:text="Contact:565-865-7845"
                android:textSize="20dp"
                android:textColor="#591414"
                android:fontFamily="@font/c_c"
                android:layout_width="match_parent"
                android:paddingTop="8dp"
                android:paddingLeft="5dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>




        </LinearLayout>


    </RelativeLayout>
    <!-- Expanded Layout -->
    <LinearLayout
        android:id="@+id/expandedLayout"
        android:layout_marginTop="140dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/b_dish"
       >

    <!-- Email -->
    <TextView
        android:id="@+id/expanded_txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: example@email.com"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:textSize="18sp"
        android:fontFamily="@font/c_c"
        android:textStyle="bold"/>

    <!-- Location -->
    <TextView
        android:id="@+id/expanded_txtLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location: Agency Location"
        android:textColor="#000000"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:textSize="18sp"
        android:fontFamily="@font/c_c"
        android:textStyle="bold"/>

    <!-- Expertise Area -->
    <TextView
        android:id="@+id/expanded_txtExpertise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expertise Area: Expertise Area"
        android:textColor="#000000"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:textSize="18sp"
        android:fontFamily="@font/c_c"
        android:textStyle="bold"/>

    <!-- Registration Date -->
    <TextView
        android:id="@+id/expanded_txtRegistrationDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registration Date: 2022-01-15"
        android:textColor="#000000"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="18sp"
        android:fontFamily="@font/c_c"
        android:textStyle="bold"/>
    </LinearLayout>
</RelativeLayout>
